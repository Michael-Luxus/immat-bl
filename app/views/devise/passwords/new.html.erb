<sky>

  <!--formulaire sign up-->
  <div class="form2">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="forceColor"></div>
    <div class="topbar">
      <div class="spanColor"></div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", id:"password", placeholder:"Email" %>
    </div>
    <button type="submit" class="submit" id="submit" >M'envoyer des instructions</button>
  </div>

  <% end %>

  <div id="messageerror">
    <h1><%= devise_error_messages! %></h1>
  </div>



</sky>
