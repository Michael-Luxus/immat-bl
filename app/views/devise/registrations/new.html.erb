<sky>




    <!--formulaire sign up-->
    <div class="form2">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="forceColor"></div>
        <div class="topbar">
            <div class="spanColor"></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", id:"password", placeholder:"Email" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"input", id:"password", placeholder:"Nouveau mot de passe"  %>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class:"input", id:"password", placeholder:"Repetez le mot de passe"  %>
        </div>
        <button type="submit" class="submit" id="submit" >S'inscrir</button>
    </div>

    <% end %>

    <div id="messageerror">
        <h1><%= devise_error_messages! %></h1>
    </div>

    

